extends layout

block content
  h2.text-center.mt-3.mb-3= title
  form.mx-auto(action="" method="POST" style="max-width:35rem")
    .form-group
      label(for="title") Title
      input#title.d-block.form-control(type="text", name="title" value=(message ? message.title : ""))
    .form-group
      label(for="text") Message
      textarea#text.d-block.form-control(name="text", cols="30", rows="8gcd")= message ? message.text : ""
    button.btn.btn-dark(type="submit") Submit Message
  if errors
    for error in errors
      .alert.alert-danger.mx-auto(role="alert")!= error.msg