extends layout

block content
  h2.mt-3.mb-3.text-center Log-In
  form.mx-auto(action="" method="POST" style="max-width:20rem")
    .form-group
      label(for="username") Username
      input#username(class="form-control" name='username' type='text' value=(!username ? "" : username))
    .form-group
      label(for="password") Password
      input#password(type="password" class="form-control" name="password")
    button(type="submit" class="btn btn-dark") Submit
    if errors
      for error in errors
        .alert.alert-danger.mt-3.mb-3(role="alert" style="width:20rem")= error.msg